<!DOCTYPE html>
<html>
  <head>
    <title>MSM SIGNIN</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
      <nav>
      <ul>
          <li>
          <% if @current_user %>
            <a href="/user_sign_out">
              Sign out
            </a>
          </li>
          <li>
            <a href="/bookmarks">
              My bookmarks
            </a>
          </li>
        <li>
          <a href="/">
            Home
          </a>
        </li>
        <% else %>
            <a href="/user_sign_in">
              Sign in
            </a>
          </li>
          <li>
            <a href="/user_sign_up">
              Sign up
            </a>
          </li>
        <li>
          <a href="/">
            Home
          </a>
        </li>
        <% end %>

      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
